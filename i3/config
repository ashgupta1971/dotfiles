# change volume or toggle mute
bindsym $mod+Shift+Page_Up exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+10 i3blocks 
bindsym $mod+Shift+Page_Down exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+10 i3blocks
bindsym $mod+Shift+End exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+10

